{
  "blueprint" : "default",
  "default_password" : "admin",
  "host_groups" :[
    <% @agents.filter { |hgn, _| hgn.start_with?("host_group") }.each do |host_group_name, fqdn| %>
      {
        "name" : "<%= host_group_name %>",
        "hosts" : [
          {
            "fqdn" : "<%= fqdn %>"
          }
        ]
      }
      <%= @agents.keys.last == host_group_name ? "" : "," %>
    <% end %>
  ]
}
